<UserControl x:Class="EodhdLoader.Views.IndexManagerView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:EodhdLoader">
    <UserControl.Resources>
        <local:InverseBoolConverter x:Key="InverseBoolConverter"/>
        <local:EnvironmentConverter x:Key="EnvironmentConverter"/>
    </UserControl.Resources>
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,20">
            <TextBlock Text="Index Manager" FontSize="24" FontWeight="Bold" VerticalAlignment="Center"/>
            <TextBlock Text="Environment:" FontSize="14" Margin="30,0,10,0" VerticalAlignment="Center"/>
            <ComboBox Width="120" SelectedIndex="{Binding SelectedEnvironment, Converter={StaticResource EnvironmentConverter}}">
                <ComboBoxItem Content="Local"/>
                <ComboBoxItem Content="Production"/>
            </ComboBox>
            <Button Content="Test Connection" Command="{Binding TestConnectionCommand}"
                    Width="120" Height="30" Margin="10,0,0,0"/>
        </StackPanel>

        <!-- Index Selection -->
        <GroupBox Grid.Row="1" Header="Select Index" Margin="0,0,0,15">
            <Grid Margin="10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <ComboBox Grid.Column="0" ItemsSource="{Binding AvailableIndices}"
                          SelectedItem="{Binding SelectedIndex}"
                          DisplayMemberPath="Name"
                          Margin="0,0,10,0"/>

                <Button Grid.Column="1" Content="Load Constituents"
                        Command="{Binding LoadConstituentsCommand}"
                        Width="140" Height="30"
                        IsEnabled="{Binding IsLoadingConstituents, Converter={StaticResource InverseBoolConverter}}"/>
            </Grid>
        </GroupBox>

        <!-- Constituents Info -->
        <GroupBox Grid.Row="2" Header="Constituents" Margin="0,0,0,15">
            <Grid Margin="10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" Text="Securities in index:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                <TextBlock Grid.Column="1" Text="{Binding ConstituentCount, StringFormat=N0}"
                           FontWeight="Bold" FontSize="16" Foreground="Blue"/>
            </Grid>
        </GroupBox>

        <!-- Backfill Configuration -->
        <GroupBox Grid.Row="3" Header="Backfill Configuration" Margin="0,0,0,15">
            <Grid Margin="10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Row="0" Grid.Column="0" Text="From Date:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                <DatePicker Grid.Row="0" Grid.Column="1" SelectedDate="{Binding BackfillFromDate}" Margin="0,0,20,0"/>

                <TextBlock Grid.Row="0" Grid.Column="2" Text="To Date:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                <DatePicker Grid.Row="0" Grid.Column="3" SelectedDate="{Binding BackfillToDate}"/>

                <!-- Progress Bar -->
                <ProgressBar Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="4"
                             Value="{Binding Progress}" Minimum="0" Maximum="100"
                             Height="25" Margin="0,10,0,0"/>
            </Grid>
        </GroupBox>

        <!-- Actions -->
        <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,0,15">
            <TextBlock Text="{Binding ProgressText}" VerticalAlignment="Center" Margin="0,0,15,0" FontWeight="Bold"/>
            <Button Content="Clear Log" Command="{Binding ClearLogCommand}" Width="80" Height="30" Margin="0,0,10,0"/>
            <Button Content="Cancel" Command="{Binding CancelBackfillCommand}" Width="80" Height="30" Margin="0,0,10,0"
                    IsEnabled="{Binding IsLoading}"/>
            <Button Content="Start Backfill" Command="{Binding StartBackfillCommand}" Width="120" Height="30"
                    IsEnabled="{Binding IsLoading, Converter={StaticResource InverseBoolConverter}}"/>
        </StackPanel>

        <!-- Log -->
        <GroupBox Grid.Row="5" Header="Log">
            <ListBox ItemsSource="{Binding LogMessages}" FontFamily="Consolas" FontSize="11"
                     ScrollViewer.HorizontalScrollBarVisibility="Auto">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding}" TextWrapping="NoWrap"/>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </GroupBox>
    </Grid>
</UserControl>
