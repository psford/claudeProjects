<UserControl x:Class="EodhdLoader.Views.BulkFillView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:EodhdLoader">
    <UserControl.Resources>
        <local:InverseBoolConverter x:Key="InverseBoolConverter"/>
        <local:EnvironmentConverter x:Key="EnvironmentConverter"/>
        <local:BoolToColorConverter x:Key="BoolToColorConverter"/>
        <local:StringToVisibilityConverter x:Key="StringToVisibilityConverter"/>
    </UserControl.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,20">
            <TextBlock Text="üì¶" FontSize="32" VerticalAlignment="Center" Margin="0,0,10,0"/>
            <StackPanel>
                <TextBlock Text="Bulk Fill Test" FontSize="24" FontWeight="Bold"/>
                <TextBlock Text="Testing bulk-by-date gap filling approach" Foreground="Gray" FontSize="12"/>
            </StackPanel>
        </StackPanel>

        <!-- Configuration Panel -->
        <GroupBox Grid.Row="1" Header="Configuration" Margin="0,0,0,15">
            <Grid Margin="10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Environment Selection -->
                <TextBlock Grid.Row="0" Grid.Column="0" Text="Environment:" VerticalAlignment="Center" Margin="0,0,10,8"/>
                <ComboBox Grid.Row="0" Grid.Column="1"
                          SelectedIndex="{Binding SelectedEnvironment, Mode=TwoWay, Converter={StaticResource EnvironmentConverter}}"
                          IsEnabled="{Binding IsRunning, Converter={StaticResource InverseBoolConverter}}"
                          Width="150" HorizontalAlignment="Left" Margin="0,0,0,8">
                    <ComboBoxItem Content="Local (localhost)"/>
                    <ComboBoxItem Content="Production (Azure)"/>
                </ComboBox>
                <Button Grid.Row="0" Grid.Column="2" Content="Test Connection"
                        Command="{Binding TestConnectionCommand}"
                        IsEnabled="{Binding IsRunning, Converter={StaticResource InverseBoolConverter}}"
                        Padding="10,5" Margin="0,0,0,8"/>

                <!-- API URL and Status -->
                <TextBlock Grid.Row="1" Grid.Column="0" Text="Target API:" VerticalAlignment="Center" Margin="0,0,10,8"/>
                <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding ApiUrl}" VerticalAlignment="Center" Margin="0,0,0,8" Foreground="Gray"/>
                <TextBlock Grid.Row="1" Grid.Column="2" Text="{Binding ConnectionStatus}"
                           Foreground="{Binding IsConnected, Converter={StaticResource BoolToColorConverter}}"
                           VerticalAlignment="Center" Margin="0,0,0,8" FontWeight="Bold"/>

                <!-- Max Dates -->
                <TextBlock Grid.Row="2" Grid.Column="0" Text="Max Dates:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                <StackPanel Grid.Row="2" Grid.Column="1" Orientation="Horizontal">
                    <TextBox Text="{Binding MaxDatesToProcess, UpdateSourceTrigger=PropertyChanged}"
                             Width="80" VerticalAlignment="Center"
                             IsEnabled="{Binding IsRunning, Converter={StaticResource InverseBoolConverter}}"/>
                    <TextBlock Text=" dates per run (each date = 1 bulk API call)" VerticalAlignment="Center" Foreground="Gray" Margin="5,0,0,0"/>
                </StackPanel>
            </Grid>
        </GroupBox>

        <!-- Controls and Progress -->
        <GroupBox Grid.Row="2" Header="Controls" Margin="0,0,0,15">
            <Grid Margin="10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Buttons -->
                <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,15">
                    <Button Content="üîç Analyze Gaps"
                            Command="{Binding AnalyzeGapsCommand}"
                            Padding="20,10" FontSize="14"
                            Background="#2196F3" Foreground="White" Margin="0,0,10,0"/>
                    <Button Content="‚ñ∂ Start Bulk Fill"
                            Command="{Binding StartBulkFillCommand}"
                            Padding="20,10" FontSize="14" FontWeight="Bold"
                            Background="#4CAF50" Foreground="White" Margin="0,0,10,0"/>
                    <Button Content="‚èπ Stop"
                            Command="{Binding StopBulkFillCommand}"
                            Padding="20,10" FontSize="14"
                            Background="#f44336" Foreground="White"/>
                </StackPanel>

                <!-- Progress Bar -->
                <ProgressBar Grid.Row="1" Height="25" Value="{Binding Progress}" Maximum="100" Margin="0,0,0,10"/>

                <!-- Stats Grid -->
                <Grid Grid.Row="2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0">
                        <TextBlock Text="Dates Processed" FontSize="10" Foreground="Gray"/>
                        <TextBlock FontSize="18" FontWeight="Bold">
                            <Run Text="{Binding DatesProcessed, Mode=OneWay}"/>
                            <Run Text="/" Foreground="Gray"/>
                            <Run Text="{Binding TotalDatesToProcess, Mode=OneWay}" Foreground="Gray"/>
                        </TextBlock>
                    </StackPanel>

                    <StackPanel Grid.Column="1">
                        <TextBlock Text="Current Date" FontSize="10" Foreground="Gray"/>
                        <TextBlock Text="{Binding CurrentDate, StringFormat=yyyy-MM-dd}" FontSize="18" FontWeight="Bold"/>
                    </StackPanel>

                    <StackPanel Grid.Column="2">
                        <TextBlock Text="Records Inserted" FontSize="10" Foreground="Gray"/>
                        <TextBlock Text="{Binding RecordsInserted, StringFormat=N0}" FontSize="18" FontWeight="Bold"/>
                    </StackPanel>

                    <StackPanel Grid.Column="3">
                        <TextBlock Text="API Calls" FontSize="10" Foreground="Gray"/>
                        <TextBlock Text="{Binding ApiCallsMade}" FontSize="18" FontWeight="Bold"/>
                    </StackPanel>
                </Grid>
            </Grid>
        </GroupBox>

        <!-- Analysis Report -->
        <GroupBox Grid.Row="3" Header="Gap Analysis" Margin="0,0,0,15"
                  Visibility="{Binding AnalysisReport, Converter={StaticResource StringToVisibilityConverter}}">
            <ScrollViewer MaxHeight="200" VerticalScrollBarVisibility="Auto">
                <TextBlock Text="{Binding AnalysisReport}" FontFamily="Consolas" FontSize="11"
                           TextWrapping="NoWrap" Padding="10"/>
            </ScrollViewer>
        </GroupBox>

        <!-- Strategy Info -->
        <GroupBox Grid.Row="4" Header="Bulk Fill Strategy (TEST)" Margin="0,0,0,15">
            <StackPanel Margin="10">
                <TextBlock TextWrapping="Wrap" Foreground="#FF6B00" FontWeight="Bold" Margin="0,0,0,10">
                    ‚ö†Ô∏è This is a TEST tab for evaluating the bulk-by-date approach.
                </TextBlock>
                <TextBlock TextWrapping="Wrap" Foreground="Gray">
                    <Run FontWeight="Bold">Current Boris Approach:</Run>
                    <Run>Per-ticker API calls. For each ticker, fetches full history even when filling one date.</Run>
                </TextBlock>
                <TextBlock TextWrapping="Wrap" Foreground="Gray" Margin="0,5,0,0">
                    <Run FontWeight="Bold">This Tab's Approach:</Run>
                    <Run>Per-date bulk API calls. 1 call = ALL US tickers for that date. More efficient for gap filling.</Run>
                </TextBlock>
                <TextBlock TextWrapping="Wrap" Foreground="Gray" Margin="0,5,0,0">
                    <Run FontWeight="Bold">Comparison:</Run>
                    <Run>For 10 years of S&amp;P 500: Boris = 1,260,000 potential calls. Bulk = ~2,520 calls.</Run>
                </TextBlock>
            </StackPanel>
        </GroupBox>

        <!-- Log -->
        <GroupBox Grid.Row="5" Header="Activity Log">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <ListBox Grid.Row="0" ItemsSource="{Binding Log}"
                         FontFamily="Consolas" FontSize="11"
                         ScrollViewer.HorizontalScrollBarVisibility="Auto"
                         ScrollViewer.VerticalScrollBarVisibility="Auto">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding}" TextWrapping="NoWrap"/>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>

                <Button Grid.Row="1" Content="Clear Log"
                        Command="{Binding ClearLogCommand}"
                        HorizontalAlignment="Right" Padding="10,5" Margin="0,5,0,0"/>
            </Grid>
        </GroupBox>
    </Grid>
</UserControl>
