<UserControl x:Class="EodhdLoader.Views.MigrationView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:EodhdLoader">
    <UserControl.Resources>
        <local:InverseBoolConverter x:Key="InverseBoolConverter"/>
        <local:StatusToColorConverter x:Key="StatusToColorConverter"/>
    </UserControl.Resources>
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0" Text="Azure SQL Migration" FontSize="24" FontWeight="Bold" Margin="0,0,0,20"/>

        <!-- Connection Configuration -->
        <GroupBox Grid.Row="1" Header="Connection Configuration" Margin="0,0,0,15">
            <Grid Margin="10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="100"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Source -->
                <TextBlock Grid.Row="0" Grid.Column="0" Text="Source:" VerticalAlignment="Center"/>
                <TextBlock Grid.Row="0" Grid.Column="1" Text="Local SQL Server Express (.\SQLEXPRESS)" VerticalAlignment="Center"/>
                <TextBlock Grid.Row="0" Grid.Column="2" Text="{Binding SourceStatus}" Margin="10,0,0,0"
                           Foreground="{Binding SourceStatus, Converter={StaticResource StatusToColorConverter}}"/>

                <!-- Target -->
                <TextBlock Grid.Row="1" Grid.Column="0" Text="Target:" VerticalAlignment="Center" Margin="0,10,0,0"/>
                <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding TargetConnectionString, UpdateSourceTrigger=PropertyChanged}"
                         Margin="0,10,0,0" VerticalAlignment="Center"/>
                <TextBlock Grid.Row="1" Grid.Column="2" Text="{Binding TargetStatus}" Margin="10,10,0,0"
                           Foreground="{Binding TargetStatus, Converter={StaticResource StatusToColorConverter}}"/>

                <!-- Test Button -->
                <Button Grid.Row="2" Grid.Column="2" Content="Test Connections" Command="{Binding TestConnectionsCommand}"
                        Width="120" Height="25" Margin="10,10,0,0" HorizontalAlignment="Right"/>
            </Grid>
        </GroupBox>

        <!-- Migration Options -->
        <GroupBox Grid.Row="2" Header="Migration Options" Margin="0,0,0,15">
            <StackPanel Margin="10">
                <CheckBox Content="Migrate SecurityMaster table" IsChecked="{Binding MigrateSecurityMaster}" Margin="0,0,0,5"/>
                <CheckBox Content="Migrate Prices table" IsChecked="{Binding MigratePrices}" Margin="0,0,0,5"/>

                <StackPanel Orientation="Horizontal" Margin="20,0,0,5">
                    <CheckBox Content="Incremental (from date):" IsChecked="{Binding UseIncrementalPrices}"
                              IsEnabled="{Binding MigratePrices}" Margin="0,0,10,0"/>
                    <DatePicker SelectedDate="{Binding IncrementalFromDate}"
                                IsEnabled="{Binding UseIncrementalPrices}" Width="150"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                    <TextBlock Text="Batch Size:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                    <Slider Value="{Binding BatchSize}" Minimum="1000" Maximum="10000" Width="200"
                            TickFrequency="1000" IsSnapToTickEnabled="True"/>
                    <TextBlock Text="{Binding BatchSize, StringFormat=N0}" VerticalAlignment="Center" Margin="10,0,0,0" Width="60"/>
                </StackPanel>
            </StackPanel>
        </GroupBox>

        <!-- Progress -->
        <GroupBox Grid.Row="3" Header="Progress" Margin="0,0,0,15">
            <Grid Margin="10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <ProgressBar Grid.Row="0" Value="{Binding Progress}" Minimum="0" Maximum="100" Height="25"/>
                <TextBlock Grid.Row="1" Text="{Binding ProgressText}" HorizontalAlignment="Center" Margin="0,5,0,0"/>
            </Grid>
        </GroupBox>

        <!-- Actions -->
        <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,0,15">
            <Button Content="Clear Log" Command="{Binding ClearLogCommand}" Width="80" Height="30" Margin="0,0,10,0"/>
            <Button Content="Cancel" Command="{Binding CancelMigrationCommand}" Width="80" Height="30" Margin="0,0,10,0"
                    IsEnabled="{Binding IsMigrating}"/>
            <Button Content="Start Migration" Command="{Binding StartMigrationCommand}" Width="110" Height="30"
                    IsEnabled="{Binding IsMigrating, Converter={StaticResource InverseBoolConverter}}"/>
        </StackPanel>

        <!-- Log -->
        <GroupBox Grid.Row="5" Header="Log">
            <ListBox ItemsSource="{Binding LogMessages}" FontFamily="Consolas" FontSize="11"
                     ScrollViewer.HorizontalScrollBarVisibility="Auto">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding}" TextWrapping="NoWrap"/>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </GroupBox>
    </Grid>
</UserControl>
