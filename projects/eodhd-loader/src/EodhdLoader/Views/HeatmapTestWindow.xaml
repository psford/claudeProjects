<Window x:Class="EodhdLoader.Views.HeatmapTestWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="clr-namespace:EodhdLoader.Controls"
        Title="Heatmap V2 - Coverage Blob Map" Height="600" Width="900" MinWidth="700" MinHeight="450"
        WindowStartupLocation="CenterScreen"
        Background="#0a0a15">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
            <TextBlock Text="Coverage Heatmap V2" FontSize="18" FontWeight="Bold" Foreground="#c8c8c8"
                       VerticalAlignment="Center"/>
            <TextBlock Text="  |  green = coverage, black = no data" FontSize="12" Foreground="#666"
                       VerticalAlignment="Center" Margin="10,0,0,0"/>
            <Button x:Name="RefreshButton" Content="Refresh" Click="OnRefreshClick"
                    Width="80" Height="28" Margin="20,0,0,0"
                    Background="#1a1a2e" Foreground="#c8c8c8" BorderBrush="#3c3c50"/>
        </StackPanel>

        <!-- V2 Heatmap Control -->
        <controls:HeatmapV2Control x:Name="HeatmapControl" Grid.Row="1"/>

        <!-- Status Bar -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,8,0,0">
            <TextBlock x:Name="StatusText" Text="Ready" Foreground="#666" FontSize="11"/>
        </StackPanel>
    </Grid>
</Window>
