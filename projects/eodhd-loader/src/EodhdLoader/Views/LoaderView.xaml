<UserControl x:Class="EodhdLoader.Views.LoaderView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:EodhdLoader">
    <UserControl.Resources>
        <local:InverseBoolConverter x:Key="InverseBoolConverter"/>
    </UserControl.Resources>
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0" Text="EODHD Data Loader" FontSize="24" FontWeight="Bold" Margin="0,0,0,20"/>

        <!-- Configuration -->
        <GroupBox Grid.Row="1" Header="Load Configuration" Margin="0,0,0,15">
            <Grid Margin="10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" Text="Start Date:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                <DatePicker Grid.Column="1" SelectedDate="{Binding StartDate}" Margin="0,0,20,0"/>

                <TextBlock Grid.Column="2" Text="End Date:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                <DatePicker Grid.Column="3" SelectedDate="{Binding EndDate}" Margin="0,0,20,0"/>

                <TextBlock Grid.Column="4" Text="Mode:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                <ComboBox Grid.Column="5" ItemsSource="{Binding LoadingModes}" SelectedItem="{Binding SelectedMode}"/>
            </Grid>
        </GroupBox>

        <!-- Progress -->
        <GroupBox Grid.Row="2" Header="Progress" Margin="0,0,0,15">
            <Grid Margin="10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <ProgressBar Grid.Row="0" Value="{Binding Progress}" Minimum="0" Maximum="100" Height="25"/>

                <TextBlock Grid.Row="1" Text="{Binding ProgressText}" HorizontalAlignment="Center" Margin="0,5,0,10"/>

                <Grid Grid.Row="2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" HorizontalAlignment="Center">
                        <TextBlock Text="Days Processed" Foreground="Gray" HorizontalAlignment="Center"/>
                        <TextBlock Text="{Binding DaysProcessed, StringFormat=N0}" FontWeight="Bold" FontSize="16" HorizontalAlignment="Center"/>
                    </StackPanel>

                    <StackPanel Grid.Column="1" HorizontalAlignment="Center">
                        <TextBlock Text="Total Days" Foreground="Blue" HorizontalAlignment="Center"/>
                        <TextBlock Text="{Binding TotalDays, StringFormat=N0}" FontWeight="Bold" FontSize="16" Foreground="Blue" HorizontalAlignment="Center"/>
                    </StackPanel>

                    <StackPanel Grid.Column="2" HorizontalAlignment="Center">
                        <TextBlock Text="Errors" Foreground="Red" HorizontalAlignment="Center"/>
                        <TextBlock Text="{Binding Errors, StringFormat=N0}" FontWeight="Bold" FontSize="16" Foreground="Red" HorizontalAlignment="Center"/>
                    </StackPanel>
                </Grid>
            </Grid>
        </GroupBox>

        <!-- Actions -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,0,15">
            <Button Content="Clear Log" Command="{Binding ClearLogCommand}" Width="80" Height="30" Margin="0,0,10,0"/>
            <Button Content="Cancel" Command="{Binding CancelLoadingCommand}" Width="80" Height="30" Margin="0,0,10,0"
                    IsEnabled="{Binding IsLoading}"/>
            <Button Content="Start Loading" Command="{Binding StartLoadingCommand}" Width="100" Height="30"
                    IsEnabled="{Binding IsLoading, Converter={StaticResource InverseBoolConverter}}"/>
        </StackPanel>

        <!-- Log -->
        <GroupBox Grid.Row="4" Header="Log">
            <ListBox ItemsSource="{Binding LogMessages}" FontFamily="Consolas" FontSize="11"
                     ScrollViewer.HorizontalScrollBarVisibility="Auto">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding}" TextWrapping="NoWrap"/>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </GroupBox>
    </Grid>
</UserControl>
