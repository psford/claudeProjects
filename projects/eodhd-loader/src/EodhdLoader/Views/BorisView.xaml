<UserControl x:Class="EodhdLoader.Views.BorisView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:EodhdLoader">
    <UserControl.Resources>
        <local:InverseBoolConverter x:Key="InverseBoolConverter"/>
        <local:EnvironmentConverter x:Key="EnvironmentConverter"/>
        <local:BoolToColorConverter x:Key="BoolToColorConverter"/>
        <local:StringToVisibilityConverter x:Key="StringToVisibilityConverter"/>
    </UserControl.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header with Spider Icon -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,20">
            <TextBlock Text="ðŸ•·ï¸" FontSize="32" VerticalAlignment="Center" Margin="0,0,10,0"/>
            <StackPanel>
                <TextBlock Text="Boris the Spider" FontSize="24" FontWeight="Bold"/>
                <TextBlock Text="Intelligent Price Data Loader" Foreground="Gray" FontSize="12"/>
            </StackPanel>
        </StackPanel>

        <!-- Configuration Panel -->
        <GroupBox Grid.Row="1" Header="Configuration" Margin="0,0,0,15">
            <Grid Margin="10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Environment Selection -->
                <TextBlock Grid.Row="0" Grid.Column="0" Text="Environment:" VerticalAlignment="Center" Margin="0,0,10,8"/>
                <ComboBox Grid.Row="0" Grid.Column="1"
                          SelectedIndex="{Binding SelectedEnvironment, Mode=TwoWay, Converter={StaticResource EnvironmentConverter}}"
                          IsEnabled="{Binding IsRunning, Converter={StaticResource InverseBoolConverter}}"
                          Width="150" HorizontalAlignment="Left" Margin="0,0,0,8">
                    <ComboBoxItem Content="Local (localhost)"/>
                    <ComboBoxItem Content="Production (Azure)"/>
                </ComboBox>
                <Button Grid.Row="0" Grid.Column="2" Content="Test Connection"
                        Command="{Binding TestConnectionCommand}"
                        IsEnabled="{Binding IsRunning, Converter={StaticResource InverseBoolConverter}}"
                        Padding="10,5" Margin="0,0,0,8"/>

                <!-- API URL and Status -->
                <TextBlock Grid.Row="1" Grid.Column="0" Text="Target API:" VerticalAlignment="Center" Margin="0,0,10,8"/>
                <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding ApiUrl}" VerticalAlignment="Center" Margin="0,0,0,8" Foreground="Gray"/>
                <TextBlock Grid.Row="1" Grid.Column="2" Text="{Binding ConnectionStatus}"
                           Foreground="{Binding IsConnected, Converter={StaticResource BoolToColorConverter}}"
                           VerticalAlignment="Center" Margin="0,0,0,8" FontWeight="Bold"/>

                <!-- Daily Budget -->
                <TextBlock Grid.Row="2" Grid.Column="0" Text="Daily Budget:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                <StackPanel Grid.Row="2" Grid.Column="1" Orientation="Horizontal">
                    <TextBox Text="{Binding DailyBudget, UpdateSourceTrigger=PropertyChanged}"
                             Width="80" VerticalAlignment="Center"
                             IsEnabled="{Binding IsRunning, Converter={StaticResource InverseBoolConverter}}"/>
                    <TextBlock Text=" API calls/day" VerticalAlignment="Center" Foreground="Gray" Margin="5,0,0,0"/>
                </StackPanel>
            </Grid>
        </GroupBox>

        <!-- Controls and Progress -->
        <GroupBox Grid.Row="2" Header="Controls" Margin="0,0,0,15">
            <Grid Margin="10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Start/Stop Buttons -->
                <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,15">
                    <Button Content="â–¶ Start Boris"
                            Command="{Binding StartBorisCommand}"
                            Padding="20,10" FontSize="14" FontWeight="Bold"
                            Background="#4CAF50" Foreground="White" Margin="0,0,10,0"/>
                    <Button Content="â¹ Stop Boris"
                            Command="{Binding StopBorisCommand}"
                            Padding="20,10" FontSize="14"
                            Background="#f44336" Foreground="White" Margin="0,0,10,0"/>
                    <Button Content="ðŸ” Analyze Coverage"
                            Command="{Binding AnalyzeCoverageCommand}"
                            Padding="20,10" FontSize="14"
                            Background="#2196F3" Foreground="White" Margin="0,0,10,0"/>
                    <Button Content="ðŸ“… Fill Holidays"
                            Command="{Binding FillHolidaysCommand}"
                            Padding="20,10" FontSize="14"
                            Background="#9C27B0" Foreground="White"
                            ToolTip="Forward-fill price data for US market holidays"
                            Margin="0,0,10,0"/>
                    <Button Content="â¬‡ï¸ Sync from Prod"
                            Command="{Binding SyncFromProdCommand}"
                            Padding="20,10" FontSize="14"
                            Background="#FF9800" Foreground="White"
                            ToolTip="Pull data FROM production TO local database"/>
                </StackPanel>

                <!-- Progress Bar -->
                <ProgressBar Grid.Row="1" Height="25" Value="{Binding Progress}" Maximum="100" Margin="0,0,0,10"/>

                <!-- Stats Grid -->
                <Grid Grid.Row="2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0">
                        <TextBlock Text="Days Processed" FontSize="10" Foreground="Gray"/>
                        <TextBlock FontSize="18" FontWeight="Bold">
                            <Run Text="{Binding DaysProcessed, Mode=OneWay}"/>
                            <Run Text="/" Foreground="Gray"/>
                            <Run Text="{Binding TotalDaysQueued, Mode=OneWay}" Foreground="Gray"/>
                        </TextBlock>
                    </StackPanel>

                    <StackPanel Grid.Column="1">
                        <TextBlock Text="Current Date" FontSize="10" Foreground="Gray"/>
                        <TextBlock Text="{Binding CurrentDate, StringFormat=yyyy-MM-dd}" FontSize="18" FontWeight="Bold"/>
                    </StackPanel>

                    <StackPanel Grid.Column="2">
                        <TextBlock Text="API Calls Today" FontSize="10" Foreground="Gray"/>
                        <TextBlock FontSize="18" FontWeight="Bold">
                            <Run Text="{Binding CallsUsedToday, Mode=OneWay}"/>
                            <Run Text="/" Foreground="Gray"/>
                            <Run Text="{Binding DailyBudget, Mode=OneWay}" Foreground="Gray"/>
                        </TextBlock>
                    </StackPanel>

                    <StackPanel Grid.Column="3">
                        <TextBlock Text="Status" FontSize="10" Foreground="Gray"/>
                        <TextBlock FontSize="18" FontWeight="Bold">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Text" Value="Idle"/>
                                    <Setter Property="Foreground" Value="Gray"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsRunning}" Value="True">
                                            <Setter Property="Text" Value="Running"/>
                                            <Setter Property="Foreground" Value="#4CAF50"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                    </StackPanel>
                </Grid>
            </Grid>
        </GroupBox>

        <!-- Coverage Report (collapsible) -->
        <GroupBox Grid.Row="3" Header="Coverage Report" Margin="0,0,0,15"
                  Visibility="{Binding CoverageReport, Converter={StaticResource StringToVisibilityConverter}}">
            <ScrollViewer MaxHeight="200" VerticalScrollBarVisibility="Auto">
                <TextBlock Text="{Binding CoverageReport}" FontFamily="Consolas" FontSize="11"
                           TextWrapping="NoWrap" Padding="10"/>
            </ScrollViewer>
        </GroupBox>

        <!-- Sync Status (collapsible - shown when sync info is available) -->
        <GroupBox Grid.Row="3" Header="Sync Status" Margin="0,0,0,15"
                  Visibility="{Binding ProdStatus, Converter={StaticResource StringToVisibilityConverter}}">
            <StackPanel Margin="10">
                <TextBlock Text="{Binding ProdStatus}" FontFamily="Consolas" FontSize="11" Margin="0,0,0,5"/>
                <TextBlock Text="{Binding LocalStatus}" FontFamily="Consolas" FontSize="11"/>
            </StackPanel>
        </GroupBox>

        <!-- Strategy Info -->
        <GroupBox Grid.Row="4" Header="Boris's Strategy" Margin="0,0,0,15">
            <StackPanel Margin="10">
                <TextBlock TextWrapping="Wrap" Foreground="Gray">
                    <Run FontWeight="Bold">1. Recent First:</Run>
                    <Run>Loads missing data from the last 30 days first - users want current prices.</Run>
                </TextBlock>
                <TextBlock TextWrapping="Wrap" Foreground="Gray" Margin="0,5,0,0">
                    <Run FontWeight="Bold">2. Bulk API:</Run>
                    <Run>Uses EODHD bulk endpoint to get ALL US stocks for each date (100 calls = 1 day of data).</Run>
                </TextBlock>
                <TextBlock TextWrapping="Wrap" Foreground="Gray" Margin="0,5,0,0">
                    <Run FontWeight="Bold">3. Budget Aware:</Run>
                    <Run>Respects daily API limit. With 3000 calls/day = 30 days of full market data per day.</Run>
                </TextBlock>
            </StackPanel>
        </GroupBox>

        <!-- Log -->
        <GroupBox Grid.Row="5" Header="Activity Log">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <ListBox Grid.Row="0" ItemsSource="{Binding Log}"
                         FontFamily="Consolas" FontSize="11"
                         ScrollViewer.HorizontalScrollBarVisibility="Auto"
                         ScrollViewer.VerticalScrollBarVisibility="Auto">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding}" TextWrapping="NoWrap"/>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>

                <Button Grid.Row="1" Content="Clear Log"
                        Command="{Binding ClearLogCommand}"
                        HorizontalAlignment="Right" Padding="10,5" Margin="0,5,0,0"/>
            </Grid>
        </GroupBox>
    </Grid>
</UserControl>
