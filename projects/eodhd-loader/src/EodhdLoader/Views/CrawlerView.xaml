<UserControl x:Class="EodhdLoader.Views.CrawlerView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:EodhdLoader">
    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisConverter"/>
        <local:InverseBoolConverter x:Key="InverseBoolConverter"/>
        <local:InverseBoolVisibilityConverter x:Key="InverseBoolVisibilityConverter"/>
        <local:EnvironmentConverter x:Key="EnvironmentConverter"/>
    </UserControl.Resources>

    <Border Background="#1a1a2e" Padding="20">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,16">
                <TextBlock Text="ðŸ•·ï¸" FontSize="28" VerticalAlignment="Center" Margin="0,0,10,0"/>
                <StackPanel>
                    <TextBlock Text="Price Data Crawler" FontSize="20" FontWeight="Bold" Foreground="White"/>
                    <TextBlock Text="Autonomous gap-filling agent" FontSize="11" Foreground="#888"/>
                </StackPanel>
            </StackPanel>

            <!-- Connection + Controls -->
            <Border Grid.Row="1" Background="#16213e" CornerRadius="8" Padding="16" Margin="0,0,0,16">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Connection Status -->
                    <Ellipse Grid.Column="0" Width="12" Height="12" Margin="0,0,8,0">
                        <Ellipse.Style>
                            <Style TargetType="Ellipse">
                                <Setter Property="Fill" Value="#f44336"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsConnected}" Value="True">
                                        <Setter Property="Fill" Value="#4CAF50"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Ellipse.Style>
                    </Ellipse>
                    <TextBlock Grid.Column="1" Text="{Binding ConnectionStatus}" Foreground="White"
                               VerticalAlignment="Center" FontSize="12" Margin="0,0,16,0"/>

                    <!-- Environment Selector -->
                    <ComboBox Grid.Column="2" SelectedIndex="{Binding SelectedEnvironment, Converter={StaticResource EnvironmentConverter}}"
                              Width="100" Margin="0,0,10,0" IsEnabled="{Binding IsCrawling, Converter={StaticResource InverseBoolConverter}}">
                        <ComboBoxItem Content="Local"/>
                        <ComboBoxItem Content="Production"/>
                    </ComboBox>

                    <!-- Test Button -->
                    <Button Grid.Column="3" Content="Test" Command="{Binding TestConnectionCommand}"
                            Width="60" Height="30" Margin="0,0,10,0"
                            Background="#0f3460" Foreground="White" BorderBrush="#1a508b"
                            IsEnabled="{Binding IsCrawling, Converter={StaticResource InverseBoolConverter}}"/>

                    <!-- Start Button -->
                    <Button Grid.Column="4" Command="{Binding StartCrawlCommand}"
                            Width="90" Height="30" Margin="0,0,10,0"
                            Content="â–¶ START" Background="#4CAF50" Foreground="White"
                            FontWeight="Bold" BorderBrush="#388E3C"
                            Visibility="{Binding IsCrawling, Converter={StaticResource InverseBoolVisibilityConverter}}"/>

                    <!-- Stop Button -->
                    <Button Grid.Column="5" Command="{Binding StopCrawlCommand}"
                            Width="90" Height="30"
                            Content="â–  STOP" Background="#f44336" Foreground="White"
                            FontWeight="Bold" BorderBrush="#d32f2f"
                            Visibility="{Binding IsCrawling, Converter={StaticResource BoolToVisConverter}}"/>
                </Grid>
            </Border>

            <!-- Progress Stats -->
            <Grid Grid.Row="2" Margin="0,0,0,16">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Completion -->
                <Border Grid.Column="0" Background="#0f3460" CornerRadius="8" Padding="12" Margin="0,0,8,0">
                    <StackPanel HorizontalAlignment="Center">
                        <TextBlock Text="COMPLETE" FontSize="10" Foreground="#888" HorizontalAlignment="Center" FontWeight="Bold"/>
                        <TextBlock FontSize="24" FontWeight="Bold" Foreground="#4CAF50" HorizontalAlignment="Center" FontFamily="Consolas">
                            <Run Text="{Binding CompletionPercent, StringFormat={}{0:F1}}"/><Run Text="%"/>
                        </TextBlock>
                    </StackPanel>
                </Border>

                <!-- Days Missing -->
                <Border Grid.Column="1" Background="#0f3460" CornerRadius="8" Padding="12" Margin="4,0">
                    <StackPanel HorizontalAlignment="Center">
                        <TextBlock Text="MISSING" FontSize="10" Foreground="#888" HorizontalAlignment="Center" FontWeight="Bold"/>
                        <TextBlock Text="{Binding TotalMissingDays, StringFormat=N0}" FontSize="24" FontWeight="Bold"
                                   Foreground="#ff6b6b" HorizontalAlignment="Center" FontFamily="Consolas"/>
                    </StackPanel>
                </Border>

                <!-- Days Loaded This Session -->
                <Border Grid.Column="2" Background="#0f3460" CornerRadius="8" Padding="12" Margin="4,0">
                    <StackPanel HorizontalAlignment="Center">
                        <TextBlock Text="SESSION" FontSize="10" Foreground="#888" HorizontalAlignment="Center" FontWeight="Bold"/>
                        <TextBlock Text="{Binding DaysLoadedThisSession, StringFormat=N0}" FontSize="24" FontWeight="Bold"
                                   Foreground="#00d4ff" HorizontalAlignment="Center" FontFamily="Consolas"/>
                    </StackPanel>
                </Border>

                <!-- Records Loaded -->
                <Border Grid.Column="3" Background="#0f3460" CornerRadius="8" Padding="12" Margin="8,0,0,0">
                    <StackPanel HorizontalAlignment="Center">
                        <TextBlock Text="RECORDS" FontSize="10" Foreground="#888" HorizontalAlignment="Center" FontWeight="Bold"/>
                        <TextBlock Text="{Binding RecordsLoadedThisSession, StringFormat=N0}" FontSize="24" FontWeight="Bold"
                                   Foreground="#feca57" HorizontalAlignment="Center" FontFamily="Consolas"/>
                    </StackPanel>
                </Border>
            </Grid>

            <!-- Current Activity -->
            <Border Grid.Row="3" Background="#16213e" CornerRadius="8" Padding="16" Margin="0,0,0,16">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" Orientation="Horizontal">
                        <TextBlock Text="ðŸ”„" FontSize="16" VerticalAlignment="Center" Margin="0,0,8,0">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsCrawling}" Value="True">
                                            <DataTrigger.EnterActions>
                                                <BeginStoryboard>
                                                    <Storyboard RepeatBehavior="Forever">
                                                        <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(RotateTransform.Angle)"
                                                                         From="0" To="360" Duration="0:0:1"/>
                                                    </Storyboard>
                                                </BeginStoryboard>
                                            </DataTrigger.EnterActions>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                            <TextBlock.RenderTransform>
                                <RotateTransform CenterX="8" CenterY="8"/>
                            </TextBlock.RenderTransform>
                        </TextBlock>
                        <TextBlock Text="{Binding CurrentAction}" Foreground="White" FontSize="14" VerticalAlignment="Center"/>
                    </StackPanel>

                    <TextBlock Grid.Column="1" Text="{Binding CurrentDate}" Foreground="#00d4ff" FontSize="16"
                               FontWeight="Bold" FontFamily="Consolas" HorizontalAlignment="Center" VerticalAlignment="Center"/>

                    <StackPanel Grid.Column="2" Orientation="Horizontal">
                        <TextBlock Text="Errors: " Foreground="#888" FontSize="12" VerticalAlignment="Center"/>
                        <TextBlock Text="{Binding ErrorsThisSession}" Foreground="#ff6b6b" FontSize="12"
                                   FontWeight="Bold" VerticalAlignment="Center"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Activity Log -->
            <Border Grid.Row="4" Background="#16213e" CornerRadius="8" Padding="16">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Text="ðŸ“‹ ACTIVITY LOG" FontSize="12" Foreground="White"
                               FontWeight="Bold" Margin="0,0,0,12"/>

                    <ListBox Grid.Row="1" ItemsSource="{Binding ActivityLog}"
                             Background="Transparent" BorderThickness="0"
                             ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Border Background="#0f3460" CornerRadius="4" Padding="10,6" Margin="0,0,0,4">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="24"/>
                                            <ColumnDefinition Width="90"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="60"/>
                                        </Grid.ColumnDefinitions>

                                        <TextBlock Grid.Column="0" Text="{Binding Icon}" FontSize="12"/>
                                        <TextBlock Grid.Column="1" Text="{Binding Date}" Foreground="#00d4ff"
                                                   FontFamily="Consolas" FontSize="11"/>
                                        <TextBlock Grid.Column="2" Text="{Binding Details}" Foreground="White"
                                                   FontSize="11" TextTrimming="CharacterEllipsis"/>
                                        <TextBlock Grid.Column="3" Text="{Binding Timestamp}" Foreground="#666"
                                                   FontSize="10" HorizontalAlignment="Right"/>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </Grid>
            </Border>

            <!-- Status Bar -->
            <Border Grid.Row="5" Background="#0a0a15" CornerRadius="4" Padding="12,8" Margin="0,16,0,0">
                <TextBlock Text="{Binding StatusText}" Foreground="#888" FontSize="11" TextTrimming="CharacterEllipsis"/>
            </Border>
        </Grid>
    </Border>
</UserControl>
