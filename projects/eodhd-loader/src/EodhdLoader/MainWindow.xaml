<Window x:Class="EodhdLoader.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:EodhdLoader"
        xmlns:views="clr-namespace:EodhdLoader.Views"
        Title="Boris the Spider - Intelligent Price Data Loader" Height="750" Width="1100" MinWidth="900" MinHeight="650"
        WindowStartupLocation="CenterScreen"
        Icon="/spider.ico">
    <Window.Resources>
        <!-- Converters -->
        <BooleanToVisibilityConverter x:Key="BoolToVisConverter"/>

        <local:InverseBoolConverter x:Key="InverseBoolConverter"/>
        <local:BoolToColorConverter x:Key="BoolToColorConverter"/>
        <local:StatusToColorConverter x:Key="StatusToColorConverter"/>
        <local:EnvironmentConverter x:Key="EnvironmentConverter"/>
    </Window.Resources>

    <Grid>
        <TabControl SelectedIndex="{Binding SelectedTabIndex}">
            <TabItem Header="ðŸ•·ï¸ Boris">
                <views:BorisView DataContext="{Binding Boris}"/>
            </TabItem>
            <TabItem Header="Index Manager">
                <views:IndexManagerView DataContext="{Binding IndexManager}"/>
            </TabItem>
            <TabItem Header="Dashboard">
                <views:DashboardView DataContext="{Binding Dashboard}"/>
            </TabItem>
            <TabItem Header="Data Loader (Legacy)">
                <views:LoaderView DataContext="{Binding Loader}"/>
            </TabItem>
            <TabItem Header="Azure Migration (Legacy)">
                <views:MigrationView DataContext="{Binding Migration}"/>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
