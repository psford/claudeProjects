<Window x:Class="EodhdLoader.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:EodhdLoader"
        xmlns:views="clr-namespace:EodhdLoader.Views"
        Title="Boris the Spider - Intelligent Price Data Loader" Height="750" Width="1100" MinWidth="900" MinHeight="650"
        WindowStartupLocation="CenterScreen"
        Icon="/spider.ico">
    <Window.Resources>
        <!-- Converters -->
        <BooleanToVisibilityConverter x:Key="BoolToVisConverter"/>

        <local:InverseBoolConverter x:Key="InverseBoolConverter"/>
        <local:BoolToColorConverter x:Key="BoolToColorConverter"/>
        <local:StatusToColorConverter x:Key="StatusToColorConverter"/>
        <local:EnvironmentConverter x:Key="EnvironmentConverter"/>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TabControl Grid.Row="0" SelectedIndex="{Binding SelectedTabIndex}">
            <TabItem Header="ðŸ•·ï¸ Boris">
                <views:BorisView DataContext="{Binding Boris}"/>
            </TabItem>
            <TabItem Header="ðŸ•¸ï¸ Crawler">
                <views:CrawlerView DataContext="{Binding Crawler}"/>
            </TabItem>
            <TabItem Header="ðŸ“¦ Bulk Fill">
                <views:BulkFillView DataContext="{Binding BulkFill}"/>
            </TabItem>
            <TabItem Header="Index Manager">
                <views:IndexManagerView DataContext="{Binding IndexManager}"/>
            </TabItem>
            <TabItem Header="Dashboard">
                <views:DashboardView DataContext="{Binding Dashboard}"/>
            </TabItem>
        </TabControl>

        <!-- Dev Tools -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,4,8,4">
            <Button Content="Heatmap V2" Click="OnHeatmapV2Click" Width="90" Height="24"
                    FontSize="11" Background="#1a1a2e" Foreground="#888" BorderBrush="#3c3c50"
                    ToolTip="Open Heatmap V2 test window (green blob rendering)"/>
        </StackPanel>
    </Grid>
</Window>
