{
  "name": "stock-analyzer-frontend",
  "version": "1.0.0",
  "description": "Stock Analyzer frontend JavaScript tests",
  "private": true,
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "testMatch": [
      "**/tests/**/*.test.js"
    ],
    "collectCoverageFrom": [
      "js/**/*.js",
      "!js/lib/**"
    ],
    "coverageDirectory": "coverage",
    "verbose": true
  }
}
